<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
	<h1><%= title %></h1>
	<section class="row placeholders">

		<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<ul class="nav nav-tabs" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" data-toggle="tab" href="#modify-basic-info" role="tab">修改基本信息</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" data-toggle="tab" href="#modify-secure-info" role="tab">修改密码</a>
				</li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane fade active" role="tabpanel" id="modify-basic-info" aria-expanded="true">

					<form id='basic-info-form' class="form-horizontal">
						<div class="form-group clearfix">
							<label for="u_no" class="col-sm-2 control-label">学号</label>
							<div class="col-sm-10">
								<input type="number" class="form-control" id='u_no' readonly>
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_department" class="col-sm-2 control-label">部门</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="u_department" readonly>
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_position" class="col-sm-2 control-label">职位</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="u_position" readonly>
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_name" class="col-sm-2 control-label">姓名</label>
							<div class="col-sm-10">
								<input type="text" id="u_name" class="form-control" name="u_name">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_sex" class="col-sm-2 control-label">性别</label>
							<div class="col-sm-10">
								<select name="u_sex" id="u_sex" class="form-control">
					<option value="不明">不明</option>
					<option value="男">男</option>
					<option value="女">女</option>
				</select>
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_birthday" class="col-sm-2 control-label">生日</label>
							<div class="col-sm-10">
								<input type="date" name="u_birthday" id="u_birthday" class="form-control">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_school_college" class="col-sm-2 control-label">学院</label>
							<div class="col-sm-10">
								<select name="u_school_college" id="u_school_college" class="form-control">
					<option value="">请选择</option>
							 <option value="材料科学与工程学院">C.材料科学与工程学院</option>
							 <option value="电子与信息学院">D.电子与信息学院</option>
							 <option value="电力学院">D.电力学院</option>
							 <option value="法学院（知识产权学院）">F.法学院（知识产权学院）</option>
							 <option value="国际教育学院">G.国际教育学院</option>
							 <option value="工商管理学院（创业教育学院）">G.工商管理学院（创业教育学院）</option>
							 <option value="公共管理学院">G.公共管理学院</option>
							 <option value="环境与能源学院">H.环境与能源学院</option>
							 <option value="化学与化工学院">H.化学与化工学院</option>
							 <option value="机械与汽车工程学院">J.机械与汽车工程学院</option>
							 <option value="计算机科学与工程学院">J.计算机科学与工程学院</option>
							 <option value="建筑学院">J.建筑学院</option>
							 <option value="经济与贸易学院">J.经济与贸易学院</option>
							 <option value="理学院（数学系 物理系)">L.理学院（数学系 物理系)</option>
							 <option value="轻工与食品学院">Q.轻工与食品学院</option>
							 <option value="软件学院">R.软件学院</option>
							 <option value="生物科学与工程学院">S.生物科学与工程学院</option>
							 <option value="思想政治学院">S.思想政治学院</option>
							 <option value="设计学院">S.设计学院</option>
							 <option value="土木与交通学院">T.土木与交通学院</option>
							 <option value="体育学院">T.体育学院</option>
							 <option value="外国语学院">W.外国语学院</option>
							 <option value="新闻与传播学院">X.新闻与传播学院</option>
							 <option value="艺术学院">Y.艺术学院</option>
							 <option value="医学院">Y.医学院</option>
							 <option value="自动化科学与工程学院">Z.自动化科学与工程学院</option>
					 </select>
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_college-department" class="col-sm-2 control-label">专业</label>
							<div class="col-sm-10">
								<input type="text" id="u_college_department" class="form-control" name="u_college_department">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_tel" class="col-sm-2 control-label">手机号</label>
							<div class="col-sm-10">
								<input type="number" id="u_tel" class="form-control" name="u_tel">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_qq" class="col-sm-2 control-label">QQ号</label>
							<div class="col-sm-10">
								<input type="number" id="u_qq" class="form-control" name="u_qq">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_place" class="col-sm-2 control-label">家乡</label>
							<div class="col-sm-10">
								<input type="text" id="u_place" class="form-control" name="u_place">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_intro" class="col-sm-2 control-label">自我介绍</label>
							<div class="col-sm-10">
								<textarea id="u_intro" name="u_intro" class="form-control" type="text" rows="4" placeholder="选填"></textarea>
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_remark" class="col-sm-2 control-label">备注</label>
							<div class="col-sm-10">
								<textarea id="u_remark" name="u_remark" class="form-control" type="text" rows="4" placeholder="选填"></textarea>
							</div>
						</div>
						<div class="form-group clearfix">
							<div class="text-center">
								<button type="button" id="basic-info-button" class="btn btn-primary">保存</button>
							</div>
						</div>
					</form>
				</div>
				<div class="tab-pane fade" role="tabpanel" id="modify-secure-info" aria-expanded="false">
					<form id='secure-info-form' class="form-horizontal">
						<div class="form-group clearfix">
							<label for="u_old_password" class="col-sm-2 control-label">旧密码</label>
							<div class="col-sm-10">
								<input type="password" id="u_old-password" class="form-control" name="u_old-password">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_new_password" class="col-sm-2 control-label">新密码</label>
							<div class="col-sm-10">
								<input type="password" id="u_new-password" class="form-control" name="u_new_password">
							</div>
						</div>
						<div class="form-group clearfix">
							<label for="u_repeat_password" class="col-sm-2 control-label">再次输入密码</label>
							<div class="col-sm-10">
								<input type="password" id="u_repeat-password" class="form-control" name="u_repeat_password">
							</div>
						</div>
						<div class="form-group clearfix">
							<div class="text-center">
								<button type="button" id="secure-info-button" class="btn btn-primary">保存</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>

</main>
<script src="/dist/js/modify-user-info.js"></script>
