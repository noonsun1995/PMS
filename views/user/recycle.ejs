<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
	<h1><%= title %></h1>

	<section class="row placeholders">

		<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<table class="table table-hover table-bordered">
      <thead class="thead-inverse">
        <tr>
          <th>姓名</th>
          <th>学号</th>
          <th>性别</th>
          <th>职位</th>
					<th>部门</th>
          <th colspan="3">操作</th>
        </tr>
      </thead>
      <tbody>
				<% allUsers.forEach(function (item) { %>
					<tr>
						<td><%= item['u_name'] %></td>
						<td><%= item['u_no'] %></td>
						<td><%= item['u_sex'] %></td>
						<td><%= item['u_position'] %></td>
						<td><%= item['u_department'] %></td>
						<td><a href="/user/overview/detail?u_no=<%= item['u_no'] %>">详情</a></td>
						<% if(checkPermission < 2) { %>
						<td>
							<form action="/user/recycle/restore" id="u<%= item['u_no'] %>" method="post" style="display: none">
								<input type="hidden" name="u-no" value="<%= item['u_no'] %>">
							</form>
							<a onclick="if(confirm('你确定恢复 <%= item['u_name'] %> 吗？')){
								document.getElementById('u<%= item['u_no'] %>').submit();
								event.preventDefault();
						}
						" href="#">回收</a></td>
						<td>
							<form action="/user/recycle/delete" id="uu<%= item['u_no'] %>" method="post" style="display: none">
								<input type="hidden" name="u-no" value="<%= item['u_no'] %>">
							</form>
							<a onclick="if(confirm('你确定彻底删除 <%= item['u_name'] %> 吗？')){
								document.getElementById('uu<%= item['u_no'] %>').submit();
								event.preventDefault();
						}
						" href="#">彻底删除</a></td>
					</tr>
				<% } %>
				<% }) %>



      </tbody>
    </table>
		</div>
	</section>

</main>
